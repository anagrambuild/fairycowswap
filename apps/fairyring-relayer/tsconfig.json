{
  "version": "4.4.2",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "src",
    "lib": ["ESNext"],
    "target": "ES2015",
    "moduleResolution": "node",
    "module": "CommonJS",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./lib",
  },
  "include": ["src/**/*.ts", "node_modules/@repo/**/*"],
  "exclude": [
    "node_modules",
    "./lib",
    "lib",
    "../../node_modules",
    "../../node_modules/**/*"
  ]
}
